<Window x:Class="DevilDaggersCore.Wpf.Windows.MessageWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
        Height="200" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
		Foreground="#ddd" Background="#222">
	<StackPanel x:Name="StackPanel">
		<TextBlock Text="{Binding Message}" HorizontalAlignment="Center" />
		<Button Name="OkButton" Click="OkButton_Click" IsDefault="True" Width="128">OK</Button>
	</StackPanel>
</Window>