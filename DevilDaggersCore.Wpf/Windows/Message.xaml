<Window x:Class="DevilDaggersCore.Wpf.Windows.MessageWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
        Height="200" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Window.Resources>
		<ResourceDictionary Source="../Themes/Dark.xaml" />
	</Window.Resources>
	<StackPanel x:Name="StackPanel">
		<TextBlock Text="{Binding Message}" Margin="6" Padding="0" HorizontalAlignment="Center" />
		<Button Name="OkButton" Click="OkButton_Click" Style="{StaticResource OkButton}">OK</Button>
	</StackPanel>
</Window>